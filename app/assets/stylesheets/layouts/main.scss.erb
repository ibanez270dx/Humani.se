html.main {

  body {
    position: absolute;
    top: 0;
    margin: 0px;
    background: $background;
    font-family: $helvetica;
    @include fill-parent();

    [data-background] { background: $background; }
    [data-background='blurred'] { background: $background-blurred; }

    header {
      position: absolute;
      top: 0;
      width: 100%;
      height: 50px;

      .content {
        position: relative;
        @include outer-container;

        h1 {
          color: #fff; 
          opacity: 0.9; 
          font-size: 28px; 
          font-family: 'Fjalla One', sans-serif; 
          text-transform: uppercase;
          display: inline-block;
          float: left;
          padding-top: 9px;
        }

        nav {
          ul {
            display: inline;
            li { 
              display: inline-block;
              height: 50px;
              a { 
                display: block; 
                padding: 18px 14px 11px 14px; 
                font-size: 14px; 
                text-align: center;
                text-decoration: none;
                color: #fff; 
                opacity: 0.75;
                &:hover { 
                  background: rgba(0, 0, 0, 0.75);
                  opacity: 1; 
                }
              }
            }
          }
        }
      }
    }

    section#page {
      position: relative;
      @include outer-container;
      margin-top: 50px;
      margin-bottom: 30px;

      article {
        padding:15px;
        position:relative;
        background: #1d2024 url(<%= image_path 'background-blurred.jpg' %>) no-repeat left top;
        box-shadow: 0px 2px 7px #020e11;

        -moz-border-radius: 20px;
        -webkit-border-radius: 20px;
        border-radius: 20px; /* future proofing */
        -khtml-border-radius: 20px; /* for old Konqueror browsers */

        font-family: 'Cabin','Noto Sans', sans-serif;
        font-size:16px;
        letter-spacing:1px;
        line-height:28px;
        color:#ecf4f9;

        p { text-indent:10px; padding-top:10px  ; }
        &.solid { background: #1d2024; }
 
      }
    }


    ////////////////////////////////////////////////
    // Typography
    ////////////////////////////////////////////////

    h1 {
      font-size:55px; 
      font-family:'Gloria Hallelujah', cursive;
      text-align:center; 
      margin-left:auto; 
      margin-right:auto; 
      color:#fff; 
      padding: 0; 
      margin-top: 0;
    }

    h2 { font-family:'Gloria Hallelujah', cursive; color:#ffffff; }
    h3 { font-family:'Gloria Hallelujah', cursive; color:#ffffff; text-align:center; }

    a h3 {
      color:#0088cc;
      &:hover { text-decoration:none; }
    }

    ////////////////////////////////////////////////
    // Utility
    ////////////////////////////////////////////////
    .page-width {
      width:996px;
      margin-left:auto;
      margin-right:auto;
    }

    .navbar-fixed-top {
      position:static;
    }

    .no-margins { margin:0px; }

