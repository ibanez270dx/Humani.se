html.main {
  
  body {
    background: $background;
    font-family: $helvetica;
    margin: 0px;
    padding: 50px 0px 0px 0px; 

    [data-background] { 
      background: $background; 
    }
    
    [data-background='blurred'] { 
      background: $background-blurred; 
    }

    header {
      position: absolute;
      top: 0;
      width: 100%;
      height: 50px;
      box-shadow: 0px 2px 7px #020e11;

      .content {
        position: relative;
        @include outer-container;
        padding: 0px 8px;

        h1 {
          color: #fff; 
          opacity: 0.9; 
          font-size: 28px; 
          font-family: 'Fjalla One', sans-serif; 
          text-transform: uppercase;
          display: inline-block;
          float: left;
          padding-top: 8px;
          margin-top: 0px;
        }

        nav {
          ul {
            display: inline;
            li { 
              display: inline-block;
              height: 50px;
              a { 
                display: block; 
                padding: 18px 14px 15px 14px; 
                font-size: 14px; 
                text-align: center;
                text-decoration: none;
                color: #fff; 
                opacity: 0.75;
                &:hover { 
                  background: rgba(0, 0, 0, 0.75);
                  opacity: 1; 
                }
              }
            }
          }
        }
      }
    }

    section#page {
      @include outer-container;
      padding: 0px 8px;

      article {
        padding: 15px;
        position: relative;
        box-shadow: 0px 2px 7px #020e11;
        background-color: #1d2025;
        @include border-radius(20px);

        font-family: 'Cabin','Noto Sans', sans-serif;
        font-size: 16px;
        letter-spacing: 1px;
        color: #ecf4f9;

        p { 
          line-height: 28px;
          text-indent: 10px; 
          padding-top: 10px; 
        }

        a {
          color: #0088cc;
          text-decoration: none;
          &:hover {
            color: #005580;
            text-decoration: underline;
          }
        }
      }
    }

    ////////////////////////////////////////////////
    // Footer
    ////////////////////////////////////////////////

    footer {
      margin-left: auto;
      margin-right: auto;
      padding: 8px;
      position: relative;
      text-align: center;
      @include media($desktop) {
        @include social-buttons();
      }
      @include media($not-desktop) {
        @include social-buttons(150px, 140px, 10px);
      }
      @include media($mobile) {
        @include social-buttons(120px, 110px, 10px);
      }
      @include media($small) {
        @include social-buttons(95px, 85px, 5px);
      }
      @include media($tiny) {
        @include social-buttons(120px, 110px, 10px);
      }
    }
  }
}