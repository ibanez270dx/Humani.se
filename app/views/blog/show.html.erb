<%= content_for :head do %>
  <meta itemprop="name" content="<%= @post.title %>">
  <meta itemprop="description" content="<%= @post.abstract %>">
  <meta itemprop="image" content="<%= @post.filepicker_url %>">
  <meta property="fb:admins" content="ibanez270dx"/>
  <meta property="og:title" content="<%= @post.title %>" />
  <meta property="og:description" content="<%= @post.meta_description %>">
  <meta property="og:url" content="<%= blog_post_url(@post.url_title) %>" />
  <meta property="og:image" content="<%= @post.filepicker_url %>" />
  <meta property="og:type" content="article" />
  <meta property="og:site_name" content="Humani.se" />
<% end %>

<div id="articles">

  <article id="<%= @post.id %>" class="glass">
    <div class="photo">
      <%= filepicker_image_tag(@post.filepicker_url, { w: '768', fit: 'crop' }, id: 'photo' ) %>
      <h5>Posted on <%= human_date @post.published_at %></h5>
    </div>
    <div id="social-mobile">
      <ul>
        <li>
          <div class="fb-like" data-href="<%= blog_post_url(@post.url_title, domain: 'humani.se', port: nil) %>" data-layout="box_count" data-width="450" data-action="like" data-show-faces="false" data-share="false"></div>
        </li>
        <li>
          <a href="https://twitter.com/share" class="twitter-share-button" data-count="vertical" data-lang="en">Tweet</a>
        </li>
        <li>
          <div class="g-plusone" data-size="tall"></div>
        </li>
        <li class="linkedin">
          <script type="IN/Share" data-url="<%= blog_post_url(@post.url_title, domain: 'humani.se', port: nil) %>" data-counter="top"></script>
        </li>
      </ul>
    </div>
    <h2><%= link_to @post.title, blog_post_path(@post.url_title) %></h2>
    <p><%= markdown @post.body %></p>
  </article>

  <article class="glass">
    <h2>Comments</h2><br />
    <div class="fb-comments" data-href="<%= blog_post_url(@post.url_title, domain: 'humani.se', port: nil) %>" data-width="750" data-num-posts="10" data-colorscheme="dark"></div>
  </article>
</div>

<aside>
  <%= render partial: 'sidebar' %>
  <br />
  <article id="related-posts" class="glass">
    <h4>Other Posts</h4>
    <% @posts.each do |post| %>
      <span class="separator"></span>
      <%= link_to post.title, blog_post_path(post.url_title) %>
    <% end %>
  </article>

  <ul id="social-buttons">
    <li class="facebook">
      <div class="fb-like" data-href="<%= blog_post_url(@post.url_title, domain: 'humani.se', port: nil) %>" data-layout="button_count" data-width="450" data-action="like" data-show-faces="false" data-share="false"></div>
    </li>
    <li class="twitter">
      <a href="https://twitter.com/share" class="twitter-share-button" data-via="ibanez270dx">Tweet</a>
    </li>
    <li class="google-plus">
      <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
      <g:plusone></g:plusone>
    </li>
    <li class="linkedin">
      <script type="IN/Share" data-url="<%= blog_post_url(@post.url_title, domain: 'humani.se', port: nil) %>" data-counter="right"></script>
    </li>
  </ul>
</aside>
