<section>
  <% @posts.each do |post| %>
    <%= content_tag :article, id: post.id, class: "post" do %>

      <!-- Figure + Date Info -->
      <%= link_to blog_post_path(post.slug), class: "post-thumbnail", style: bg(post.filepicker_url) do %>
        <%= content_tag :time, datetime: post.published_at.to_date.to_s do %>
          <small><%= post.published_at.strftime("%B") %></small>
          <big><%= post.published_at.day %></big>
          <small><%= post.published_at.year %></small>
        <% end %>
      <% end %>

      <!-- Content -->
      <div class="post-content">
        <%= link_to blog_post_path(post.slug) do %>
          <h2 wrap="bt-rl"><%= post.title %></h2>
        <% end %>
        <p><%= post.abstract.html_safe %></p>
        <%= link_to icon("fas", "ellipsis-h"), blog_post_path(post.slug) %>
      </div>

    <% end %>
  <% end %>
</section>

<aside>
  <%= render partial: "sidebar" %>
</aside>
