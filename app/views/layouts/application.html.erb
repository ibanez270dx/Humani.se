<!DOCTYPE html>
<html>
  <head>
    <title><%= @title || "Humani.se" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
    <%= render 'layouts/google_analytics' %>
  </head>
  <body class="<%= "#{controller.controller_path.split('/').join(' ')} #{controller.action_name.gsub(/_/, '-')}" %>">
    <div id="fb-root"></div>

    <nav>
      <ul>
        <li><%= link_to content_tag(:h1, 'humani.se'), about_path %></li>
        <li><%= link_to 'About', about_path %></li>
        <li><%= link_to 'Blog', blog_path %></li>
      </ul>
    </nav>

    <section id="page">
      <%= yield %>
    </section>

    <footer>
      <%= yield :footer %>
    </footer>

  </body>
</html>
