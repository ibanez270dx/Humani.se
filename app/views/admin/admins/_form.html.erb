<%= render partial: 'layouts/errors', formats: [:html], locals: { klass: @admin } %>

<%= f.label :name %>
<%= f.text_field :name, class: 'pure-input-1-2' %>

<%= f.label :login %>
<%= f.text_field :login, class: 'pure-input-1-2' %>

<%= f.label :password %>
<%= f.password_field :password, class: 'pure-input-1-2' %>

<%= f.label :password_confirmation, "Password Confirmation" %>
<%= f.password_field :password_confirmation, class: 'pure-input-1-2' %>

<p>
  <%= f.submit 'Save Admin', class: 'pure-button pure-button-primary' %>
</p>
