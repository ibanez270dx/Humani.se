<h1>Posts</h1>
<%= link_to 'New Post', new_admin_post_path, class: 'btn' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="2">Enabled?</th>
    </tr>
  </thead>
  <tbody>  
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, edit_admin_post_path(post) %></td>
        <td><%= post.author.name %></td>
        <td><%= post.enabled? ? "Yes" : "No" %></td>
        <td><%= button_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </tr>
    <% end %>
  </tbody>
</table>