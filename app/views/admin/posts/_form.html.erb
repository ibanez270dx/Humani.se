<%= render partial: 'layouts/errors', formats: [:html], locals: { klass: @post } %>

<div class="control-group">
  <%= f.label :author, class: 'control-label' %>
  <input type="text" value="<%= current_admin.name %>" disabled=disabled>
  <%= f.hidden_field :author_id, value: current_admin.id %>
</div>

<div class="control-group">
  <%= f.label :filepicker_url, "Image", class: 'control-label' %>
  <%= link_to 'Pick File', '#', id: 'filepicker_url', class: 'btn btn-primary' %>
  <%= f.hidden_field :filepicker_url %>
</div>

<div class="post-image">
  <%= image_tag("#{@post.filepicker_url}/convert?w=160&h=160&fit=clip", class: 'img-polaroid') if @post.filepicker_url %>
</div>

<div class="control-group">
  <%= f.label :title, class: 'control-label' %>
  <%= f.text_field :title %>
</div>

<div class="control-group">
  <%= f.label :url_title, class: 'control-label' %>
  <%= f.text_field :url_title %>
</div>

<div class="control-group">
  <%= f.label :body, class: 'control-label' %>
  <%= f.text_area :body %>
</div>

<div class="control-group">
  <%= f.label :abstract, class: 'control-label' %>
  <%= f.text_area :abstract %>
</div>

<div class="control-group">
  <%= f.label :meta_description, class: 'control-label' %>
  <%= f.text_field :meta_description %>
</div>

<div class="control-group">
  <%= f.label :meta_keywords, class: 'control-label' %>
  <%= f.text_field :meta_keywords %>
</div>

<div class="control-group">
  <%= f.label :enabled, class: 'control-label' %>
  <%= f.check_box :enabled, value: @post.enabled? %>
</div>

<%= f.submit 'Save Post', class: 'btn' %>